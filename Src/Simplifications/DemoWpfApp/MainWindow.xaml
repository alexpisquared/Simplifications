<Window x:Class="DemoWpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoWpfApp"
        mc:Ignorable="d"
        Title="DemoWpfApp" Height="450" Width="800">
  <StackPanel>
    <TextBlock Text="Press any button" />
    <Button x:Name="button1" Content="Test 1" Height="32" Width="120" Click="button1_Click" />
    <Button x:Name="button2" Content="Test 2" Height="32" Width="120" Click="button2_Click" />
    <Button x:Name="button3" Content="Test 3" Height="32" Width="120" Click="button3_Click" />
  </StackPanel>
</Window>
